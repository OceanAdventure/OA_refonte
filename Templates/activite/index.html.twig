{% extends 'structure/base.html.twig' %}

{% block title %}Activite{% endblock %}

{% block body %}
<main role="main" class="container">
    <div class="card mt-5">
        <div class="card-body">
            <div class="row">
                <div class="col-md-9 col-lg-9 col-xs-12">
                    <h2 class="class-title">Liste des Activités</h2>
                </div>
                <div class="col-md-4">
                    <a href="{{ path('admin') }}" class="btn btn-outline-primary btn-sm">Retour</a>
                    <a href="{{ path('activite_new') }}" class="btn btn-outline-primary btn-sm">Ajouter une Activité</a>
                </div>
            </div>
            <hr>
            <div class="container">
                <div class="row">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Titre</th>
                                <th scope="col">Image</th>
                                <th scope="col">actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for activite in activites %}
                                <tr>
                                    <td>{{ activite.id }}</td>
                                    <td>{{ activite.titre | raw }}</td>
                                    <td>{{ activite.image }}</td>
                                    <td style="width:20%;">
                                        <a class="btn btn-secondary btn-sm" href="{{ path('activite_show', {'id': activite.id}) }}">
                                            <span class="btn-inner--icon"><i class="fas fa-eye"></i></span> 
                                        </a>
                                        <a class="btn btn-warning btn-sm" href="{{ path('activite_edit', {'id': activite.id}) }}">
                                            <span class="btn-inner--icon"><i class="fas fa-edit"></i></span>
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="{{ path('activite_delete', {'id': activite.id}) }}">
                                            <span class="btn-inner--icon"><i class="fas fa-trash-alt"></i></span>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="9">Aucune activite</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}