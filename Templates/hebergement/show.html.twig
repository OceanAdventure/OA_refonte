{% extends 'structure/base.html.twig' %}

{% block title %}Hebergement{% endblock %}
{% block bandeau %}
        <div class="col-md-12" style="padding-left: 0px;">
            <img src="{{ asset('images/imgConcept.png') }}" alt="" width="100%" height="100%" style="margin: 0; padding: 0; position: relative;"/>
        </div>
{% endblock %}
{% block body %}
<main role="main" class="container"><br><br>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-center">
                    {{ hebergement.grandTitre | raw }}
                </h3><br>
                <p class="text-center text-muted">
                   {{ hebergement.descriptionSsTitre | raw }}
                </p>
                <center><img alt="" src="{{ asset('upload/'~hebergement.image1~'') }}" class="img-thumbnail" width="100%" height="20%" /></center>
                <br><h3 class="text-center">
                    {{ hebergement.typeDeChambre | raw }}
                </h3>
                <p class="text-center text-muted">
                    {{ hebergement.ssText | raw }}
                </p>
                <center>{{ hebergement.galerie | raw }}</center>
            </div>
        </div>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('hebergement_index') }}">Retour Ã  la liste</a>
    <a href="{{ path('hebergement_edit', {'id': hebergement.id}) }}">Editer </a>
    &nbsp;<a class="btn btn-danger btn-sm">{{ include('hebergement/_delete_form.html.twig') }}
        <span class="btn-inner--icon"><i class="fas fa-trash-alt"></i></span>
    </a>
    {% endif %}
</main>
{% endblock %}
